<section>
    <div class="container">
        <section class="vh-100">
            <div class="container py-5 h-100">
                <div class="row d-flex align-items-center justify-content-center h-100">

                    <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                        <form action="/admin/edit_user/{{userDat._id}}" method="post" id="signup">
                            
                             <!-- name input -->
                            <div class="form-outline mb-2 text-danger">
                                <label class="form-label" for="user_name"></label>
                                <input type="text" name="user_name" id="user_name" class="form-control form-control-lg"  placeholder="Name" value="{{userDat.user_name}}"/>

                            </div>

                            <!-- number input -->
                            <div class="form-outline mb-2 text-danger">
                                <label class="form-label" for="user_number"></label>
                                <input
                                placeholder="Number"
                                    type="number"
                                    name="user_number"
                                    id="user_numnber"
                                    maxlength="10"
                                    class="form-control form-control-lg"
                                    value="{{userDat.user_number}}"
                                />

                            </div>

                            <!-- Email input -->
                            <div class="form-outline mb-2 text-danger">
                                <label class="form-label" for="user_email">`</label>
                                <input
                                placeholder="Email"
                                    type="email"
                                    name="user_email"
                                    id="user_email"
                                    class="form-control form-control-lg"
                                    required="true"
                                    value="{{userDat.user_email}}"
                                />

                            </div>

                            <!-- Password input -->
                            <div class="form-outline mb-2 text-danger">
                                <label class="form-label" for="user_password"></label>
                                <input
                                placeholder="Password"
                                    type="password"
                                    name="user_password"
                                    id="user_password"
                                    class="form-control form-control-lg"
                                    required="true"
                                    value="{{userDat.user_password}}"
                                />

                            </div>
                           

                      

                            <!-- Submit button -->
                            <button type="submit" class="btn btn-primary btn-lg btn-block" onclick="return confirm('Are you sure you want to upadte this user?')">Update</button>
                            <a href="/admin/cancel" class="btn btn-danger btn-lg btn-block" onclick="return confirm('Are you sure you want to cancel this edit?')">Cancel</a>

                        </form>
                    </div>
                </div>
            </div>
        </section>
    </div>
</section>