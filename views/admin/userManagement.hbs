<section>
    <div class="container" >
        <div class="d-flex justify-content-end" >
            <a href="/admin/add-user" class="btn btn-outline-primary me-2">Add User</a>

        </div>
        

        <table class="table  " id="myTable">
            <thead>
                <tr>
                     <th scope="col">Name</th>
                    <th scope="col">email</th>
                    <th scope="col">Number</th>
                    <th scope="col">Options</th>
                </tr>
            </thead>

            <tbody>
                {{#each userData}}
                    <tr>

                        <td>{{this.user_name}}</td>
                        <td>{{this.user_email}}</td>
                        <td>{{this.user_number}}</td>
                        <td>
                            <a href="/admin/edit_user/{{this._id}}" class="btn btn-primary" > Edit </a>
                            <a href="/admin/delete_user/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this user?')"> Delete</a></td>
                    </tr>
                {{/each}}
            </tbody>

        </table>
    </div>

</section>